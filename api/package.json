{
  "name": "synergy",
  "version": "1.0.0",
  "description": "CRM system",
  "main": "server.js",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "eslint ./src --fix",
      "git add"
    ]
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "start": "nodemon api/server.js",
    "test": "jest --verbose --rootDir=tests",
    "test:watch":"jest --verbose --rootDir=tests --watch",
    "test:coverage": "jest --verbose --rootDir=tests --coverage",
    "dev": "SET NODE_ENV=DEVELOPMENT& nodemon api/server.js",
    "prod": "SET NODE_ENV=PRODUCTION& nodemon api/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IT-Academy-Social-Projects-KRV/Synergy.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IT-Academy-Social-Projects-KRV/Synergy/issues"
  },
  "homepage": "https://github.com/IT-Academy-Social-Projects-KRV/Synergy#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "http-status": "^1.5.0",
    "jest-config": "^27.4.2",
    "pg": "^8.7.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^4.3.8",
    "jest": "^27.4.0",
    "lint-staged": "^12.1.2",
    "nodemon": "^2.0.14",
    "prettier": "2.5.0",
    "sequelize-cli": "^6.3.0"
  }
}
